<%= form_for @answer do |f| %>
  <%= f.label :label %>
  <%= f.text_area :label %>
  <%= f.label :solution %>
  <%= f.text_area :solution %>
  <%= f.label :hint %>
  <%= f.text_area :hint %>
  <%= f.label :answer_type %>
  <%= f.select :answer_type, ["inequality", "coordinates", "equation", "words", "normal"], selected: @answer.answer_type %>
  <%= f.hidden_field :redirect, value: @referer %>
  <%= f.submit %>
<% end %>
