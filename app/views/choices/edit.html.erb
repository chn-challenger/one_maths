<%= form_for @choice do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.hidden_field :redirect, value: @referer %>
  <%= f.label :correct, 'Correct' %>
  <%= f.radio_button :correct, 'true' %>
  <%= f.label :correct, 'NOT Correct' %>
  <%= f.radio_button :correct, 'false' %>
  <%= f.submit %>
<% end %>
