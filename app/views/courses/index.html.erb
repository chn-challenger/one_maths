<% if @courses.any? %>
  <% @courses.each do |course| %>
    <div class='course-card-container'>
      <div class='course-card'>
        <a href="/courses/<%= course.id %>">
          <div class="course-top" style="background-color:#<%= course.hexcolor%>;">
            <p class='course-module-text'>Module</p>
            <div class='module-circle-container'>
              <div class='circle module-circle' style="background-color:#<%= course.hexcolor%>;"></div>
              <div class='circle module-circle' style="background-color:#<%= course.hexcolor%>;"></div>
              <div class='circle module-circle' style="background-color:#<%= course.hexcolor%>;"></div>
            </div>
            <div class='progress-bar'>
              <div class='progress-indicator'>
              </div>
            </div>
            <div class='progress-level'>
              Lvl 3
            </div>
          </div>
          <div class="course-bot">
            <p class='course-title'>Course</p>
            <p class='course-name'><%= course.name %></p>
            <p class='course-desc'><%= course.description %></p>
            <button class='course-start-button' style="background-color:#<%= course.hexcolor%>;">Start</button>
          </div>
        </a>
      </div>
      <div class='course-card-background-1'></div>
      <div class='course-card-background-2'></div>

      <% if can? :edit, Course %>
        <div class='course-links'>
          &emsp;
          <%= link_to "Edit", edit_course_path(course)%>
          &emsp;
          <%= link_to "Delete", course_path(course), method: :delete%>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<% if can? :edit, Course %>
  <div class="add-course">
      <%= link_to 'Add a course', new_course_path %>
  </div>
<% end %>
