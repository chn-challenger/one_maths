<% if @courses.any? %>
  <% @courses.each do |course| %>


    <div class='course-card-container'>
      <%= render partial: 'shared/card', locals: { path: "courses",top_object: course, parts_title: "Module", main_title: "Course", course_color: course.hexcolor } %>

      <% if can? :edit, Course %>
        <div class='course-links'>
          &emsp;
          <%= link_to "Edit", edit_course_path(course)%>
          &emsp;
          <%= link_to "Delete", course_path(course), method: :delete%>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

<% if can? :edit, Course %>
  <div class="add-course">
      <%= link_to 'Add a course', new_course_path %>
  </div>
<% end %>
