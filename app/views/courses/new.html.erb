<%= form_for @course, html: {class: 'form-group'} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :hexcolor %>
  <%= f.text_field :hexcolor %>
  <%= f.label :sort_order %>
  <%= f.text_field :sort_order %>
  <%= f.select :status, @status %>
  <%= f.hidden_field :owner_id, value: current_user.id %>
  <%= f.submit class: 'btn btn-small' %>
<% end %>
