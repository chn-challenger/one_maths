<div class="course-name">
    <%= @course.name %>
</div>
<div class="back">
    <%= link_to "Back", courses_path%>
</div>
<section>
  <ul id="gallery">
    <% if @course.units.any? %>
      <% @course.units.each do |unit| %>
        <li>
          <a href="/units/<%= unit.id %>" >
            <div class="div-top" style="background-color:#<%= @course.hexcolor%>;">
              <%= unit.name %>
            </div>
            <div class ="div-bot">
              <%= unit.description %>
            </div>
          </a>
          <% if unit.maker == current_maker %>
            <div class='div-links'>
              &emsp;
              <%= link_to "Edit", edit_unit_path(unit)%>
              &emsp;
              <%= link_to "Delete", unit_path(unit), method: :delete%>
            </div>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <% if current_maker %>
    <div class="add-course">
        <%= link_to 'Add a unit', new_course_unit_path(@course) %>
    </div>
  <% end %>
</section>
