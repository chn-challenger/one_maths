<% if can? :create, @job %>
  <%= form_for @job do |f| %>
    <%= f.label :name %></br>
    <%= f.text_field :name %></br>
    <%= f.label :description %></br>
    <%= f.text_area :description %></br>
    <%= f.label :duration %></br>
    <%= select_day(8, field_name: :duration) %>days</br>
    <%= f.label :example_id %></br>
    <%= f.text_field :example_id %></br>
    <%= f.label :price %></br>
    <%= f.hidden_field :creator_id, value: current_user.id %>
    <%= f.number_field :price %></br>
    <%= f.submit %>
  <% end %>
<% end %>
