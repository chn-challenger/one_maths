<%= form_for [@topic, @lesson] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :video %>
  <%= f.text_area :video %>
  <%= f.label :sort_order %>
  <%= f.text_field :sort_order %>  
  <%= f.submit %>
<% end %>
