<header>
  <!-- START NAVIGATION -->
  <div class="nav-container <%= limit_width %>">
    <%= link_to image_tag('one_maths_small_logo.png', size: '212x32', alt: 'One Maths Logo'), root_path, class: 'home-link', id: 'one_maths_logo' %>
    <!-- <a href="/" id="site-title" class='home-link'>
      <h2>OneMaths</h2>
    </a>
    <span class='beta-label'>beta</span> -->
    <ul class='nav'>
      <% if current_user and (current_user.super_admin? or current_user.admin?)  %>
      <li>
        <div class="dropdown">
          <%= link_to 'Questions', questions_path %>
          <div class="dropdown-content">
            <%= link_to 'Add Question', new_question_path %>
          </div>
        </div>
        </li>
        <li>
        <div class="dropdown">
          <%= link_to 'Student Manager', student_manager_path %>
          <div class="dropdown-content">
            <%= link_to 'Student Questions', answered_questions_path %>
          </div>
        </div>
        </li>
        <li>
          <div class="dropdown">
            <%= link_to 'Exam Questions', exam_questions_path %>
            <div class="dropdown-content">
              <%= link_to 'Add Exam Question', new_catalogue_path %>
            </div>
          </div>
          </li>

        <% end %>
        <% if can? :read, Job %>
        <li><%= link_to 'Jobs', jobs_path %></li>
        <% end %>
        <% if user_signed_in? %>
        <% if !current_user.tickets.empty? || current_user.super_admin? || current_user.admin? %>
        <li><%= link_to 'Tickets', tickets_path %></li>
          <% end %>
          <li><%= link_to "Edit Profile", edit_user_registration_path unless current_user.admin? %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
      <!-- END OF NAVIGATION -->
      <% if current_user && (current_user.super_admin? || current_user.admin?) %>
      <a href=<%= job_review_path %> ><div class='jobs-review' id="pending-review"><%= fetch_pending_jobs.count %></div></a>
      <% end %>
      <a href='#'><div class='avatar'></div></a>
    </header>
