<h4> Tags </h4>
<div class="list-tags" >
  <%= link_to 'Add tag', new_tag_path, class: "button" %>
  <% if @tags %>
    <ul>
      <% @tags.each do |tag| %>
        <li> <%= tag.name %> | <%= link_to 'Edit', edit_tag_path(tag), class: "button" %> | <%= link_to 'Delete', tag_path(tag), class: "button", method: :delete %>
      <% end %>
    </ul>
  <% end %>
</div>
