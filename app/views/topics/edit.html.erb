<%= form_for @topic do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :level_multiplier %>
  <%= f.text_area :level_multiplier %>
  <%= f.label :sort_order %>
  <%= f.text_area :sort_order %>    
  <%= f.submit %>
<% end %>
